{
  "rulesDirectory": "node_modules/tslint-eslint-rules/dist/rules",
  "globals": {
    "document": false,
    "navigator": false,
    "window": false
  },
  "rules": {
    "triple-equals": {
      "allow-null-check": true
    },
    "curly": true,
    "eofline": false,
    "align": [
      true,
      "parameters"
    ],
    "class-name": true,
    "indent": [
      true,
      "spaces"
    ],
    "max-line-length": [
      true,
      150
    ],
    "no-trailing-whitespace": true,
    "no-duplicate-key": true,
    "no-duplicate-variable": true,
    "no-unreachable": true,
    "no-empty": true,
    "no-unused-expression": true,
    "no-unused-variable": {
      "react": true
    },
    "no-use-before-declare": true,
    "no-var-requires": false,
    "one-line": [
      true,
      "check-else",
      "check-whitespace",
      "check-open-brace"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "jsx-double"
    ],
    "whitespace": {
      "check-type": true,
      "check-operator": true
    },
    "semicolon": false,
    "handle-callback-err": [2, "^(err|error)$" ]
  }
}
